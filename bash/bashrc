#!/bin/sh

# Check if we're on Windows/Cygwin.
if $LOL_WINDOWS
	export PATH=/cygdrive/c/bin:$HOME/src/dotfiles/binw:$PATH
else
	export PATH=$HOME/.bin:$HOME/src/dotfiles/bin:$PATH
fi

# If connected to a machine via SSH, show the hostname:
if [[ -n "$SSH_CONNECTION" ]]
	# Local
	export PS1='\w\$ '
else
	# Remote
	export PS1='[\H]\w\$ '
fi
