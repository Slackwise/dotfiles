#!/bin/sh

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# If connected to a machine via SSH, show the hostname:
if [[ -n "$SSH_CONNECTION" ]]; then
	# Local
	export PS1="\w\$ "
else
	# Remote
	export PS1="[\H]\w\$ "
fi

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
